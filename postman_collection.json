    { "name": "Get My Reports", "request": { "method": "GET", "url": "{{baseUrl}}/api/reports/{{userId}}", "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}] } },
    { "name": "Create Task", "request": { "method": "POST", "url": "{{baseUrl}}/api/tasks", "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}], "body": { "mode": "raw", "raw": "{\"title\":\"New Task\",\"description\":\"Task description\",\"priority\":\"high\",\"status\":\"todo\"}" } } },
    { "name": "Get Tasks", "request": { "method": "GET", "url": "{{baseUrl}}/api/tasks", "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}] } },
    { "name": "Get Employees", "request": { "method": "GET", "url": "{{baseUrl}}/api/employees", "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}] } },
    { "name": "Admin Overview", "request": { "method": "GET", "url": "{{baseUrl}}/api/admin/overview", "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}] } }
