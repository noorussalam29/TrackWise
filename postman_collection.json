    { "name": "Login", "request": { "method": "POST", "url": "{{baseUrl}}/api/auth/login", "body": { "mode": "raw", "raw": "{\"email\":\"admin@trackwise.local\",\"password\":\"Password123!\"}" } } },
    { "name": "Punch In", "request": { "method": "POST", "url": "{{baseUrl}}/api/attendance/punch", "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}], "body": { "mode": "raw", "raw": "{\"type\":\"in\"}" } } },
    { "name": "Punch Out", "request": { "method": "POST", "url": "{{baseUrl}}/api/attendance/punch", "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}], "body": { "mode": "raw", "raw": "{\"type\":\"out\"}" } } },
